                <param name="root">dataMap</param>
            </result>
        </action>
        <action name="inverter-tandem" class="com.wolfogre.action.InverterTandemAction">
            <result type="json">
                <param name="root">dataMap</param>
            </result>
        </action>
        <action name="inverter-centralized" class="com.wolfogre.action.InverterCentralizedAction">
            <result type="json">
                <param name="root">dataMap</param>
            </result>
        </action>
        <action name="inverter-phase" class="com.wolfogre.action.InverterPhaseAction">
            <result type="json">
                <param name="root">dataMap</param>
            </result>
        </action>
    </package>
